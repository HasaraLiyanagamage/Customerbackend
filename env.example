# Frontend Environment Variables
VITE_API_URL=http://localhost:5000/api

# Backend Environment Variables
PORT=5000
NODE_ENV=development

# Database Configuration
# Option 1: Use DATABASE_URL (recommended for deployment)
# Format: mysql://username:password@host:port/database
# Example: mysql://user:password@hostname:3306/customer_management
DATABASE_URL=mysql://username:password@your-host:3306/customer_management

# Option 2: Use individual variables (for development)
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=your-password
# DB_NAME=customer_management

# JWT Secret (CHANGE THIS IN PRODUCTION)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
